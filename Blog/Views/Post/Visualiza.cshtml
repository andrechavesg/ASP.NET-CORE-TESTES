@model Blog.Models.Post
<!DOCTYPE html>

<html>
<head>
    <title>Visualiza</title>
</head>
<body>
    <form action="/Post/EditaPost" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <label>
            Titulo: <input name="titulo" value="@Model.Titulo" />
        </label>
        <label>
            Resumo: <input name="resumo" value="@Model.Resumo" />
        </label>
        <label>
            Categoria: <input name="categoria" value="@Model.Categoria" />
        </label>
        <button type="submit">Editar</button>
    </form>
</body>
</html>
