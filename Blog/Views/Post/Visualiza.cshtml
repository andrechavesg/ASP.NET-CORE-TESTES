@model Blog.Models.Post
<!DOCTYPE html>

<html>
<head>
    <title>Visualiza</title>
</head>
<body>
    <form action="/Post/EditaPost" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <label>
            Titulo: <input name="titulo" maxlength="50" required value="@Model.Titulo" />
        </label>
        <label>
            Resumo: <input name="resumo" required value="@Model.Resumo" />
        </label>
        <label>
            Categoria: <input name="categoria" value="@Model.Categoria" />
        </label>
        <button type="submit">Editar</button>
    </form>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    <script>
        $("form").validate();
    </script>
</body>
</html>
