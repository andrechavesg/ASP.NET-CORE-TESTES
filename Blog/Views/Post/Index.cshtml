@model IList<Blog.Models.Post>
<html>
<head>
    <title>Meu Blog</title>
</head>
<body>
    <h1>Lista de Posts</h1>
    <table>
        <thead>
            <tr>
                <td>Título</td>
                <td>Resumo</td>
                <td>Categoria</td>
                <td>Publicado</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Titulo</td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                    <td>
                        @if (p.Publicado)
                        {@Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicacao)) }
                    else
                    { @Html.Raw("Nao")}
                    </td>
                    <td>@Html.ActionLink("Remover", "RemovePost", new { id = p.Id })</td>
                    <td>@Html.ActionLink("Editar", "Visualiza", new { id = p.Id })</td>
                    <td>@Html.ActionLink("Publicar", "PublicaPost", new { id = p.Id })</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Incluir Post", "Novo")
</body>
</html>