@model IList<Blog.Models.Post>
<html>
<head>
    <title>Meu Blog</title>
</head>
<body>
    <h1>Lista de Posts</h1>
    <table>
        <thead>
            <tr>
                <td>Título</td>
                <td>Resumo</td>
                <td>Categoria</td>
                <td>Publicado</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
            <tr>
                <td>@p.Titulo</td>
                <td>@p.Resumo</td>
                <td>@p.Categoria</td>
                <td>
                @if (p.Publicado)
                    {@Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicacao)) }
                else
                    { @Html.Raw("Nao")}
                </td>
            <td><a href="/Post/RemovePost/@p.Id">Remover</a></td>
            <td><a href="/Post/Visualiza/@p.Id">Editar</a></td>
            <td><a href="/Post/PublicaPost/@p.Id">Publicar</a></td>
            </tr>
             }
        </tbody>
    </table>
    <a href="/Post/Novo">Criar novo post</a>
</body>
</html>