<html>
<head>
    <title></title>
</head>
<body>
    <form action="/Post/Adiciona" method="post">
        <label>
            Título: <input name="titulo" maxlength="50" required/>
        </label>
        @Html.ValidationMessage("titulo")
        <label>
            Resumo: <input name="resumo" required/>
        </label>
        @Html.ValidationMessage("resumo")
        <label>
            Categoria: <input name="categoria" />
        </label>
        @Html.ValidationMessage("categoria")
        <button type="submit">Cadastrar</button>
    </form>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    <script>
        $("form").validate();
    </script>
</body>
</html>